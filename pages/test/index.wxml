                </van-cell>
                <!--                todo  popup 被tabbar 挡住  https://developers.weixin.qq.com/community/develop/doc/000ee4ccd6cfa8a67da76bad251000-->
                <view>
                    <product-filter tabs="{{newProductsTabs}}" filterData="{{newProductsFilter}}" use-slot>
                        <view class="y-flex y-align-right ">
                            <view class="y-col-4 y-border-all   y-padding-all y-flex y-vertical-center">
                                <view class="y-pr-20">
                                    点击筛选商品
                                </view>
                                <van-icon name="apps-o" size="40rpx"></van-icon>
                            </view>
                        </view>
                    </product-filter>
                    <product-list products="{{newProducts}}"></product-list>
                </view>
            </card>
        </view>

        <view class="position-rel">
            <view class="scroll-item-3 scroll-item"></view>
            <card>
                <van-cell title="老板娘说" is-link
