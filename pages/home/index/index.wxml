                        <van-icon name="home-o" size="40rpx"></van-icon>
                    </view>
                </van-cell>
                <view class="tui-flex tui-flex-wrap tui-align-around">

                    <!--                    列表样式-->
                    <view wx:for="{{activity}}" wx:key="index" style="padding: 20rpx 0"
                          class="y-border-b tui-col-12">
                        <view class="tui-col-12">
                            <view>{{item.subtitle}}</view>
                            <view class="tui-flex tui-align-center y-font-blod y-font-xxl y-line-height-200 y-color-red"
                                  style="white-space: pre-wrap"
                            >
                                <view>{{item.title}}</view>
                            </view>
                            <view class="tui-flex tui-align-right  tui-vertical-center y-line-height-100"
                                  bidntap="go"
                                  data-url="/pages/shopping/search/index?keyword='{{item.subtitle}}'">
                                <view class=" y-underline">
                                    详情
                                </view>
                                <van-icon name="arrow"/>
                            </view>
                        </view>

                    </view>

                    <!--                    卡片样式-->
                    <view class="tui-col-5  tui-flex-col tui-align-between y-border-all y-box "
