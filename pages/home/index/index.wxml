<view class="container ">

    <shop-title title="会员内购"></shop-title>

    <view class="swiper-box">
        <carousel imgs="{{imgs}}" interval="4000" height="375rpx" fit="fill"></carousel>
    </view>
    <view class=" y-padding-lr y-bgc-white tui-flex tui-align-right y-line-height-200 y-underline "
          bindtap="tapAddress">
        丽水中山街店522号(百货大楼旁)
    </view>
    <card>
        <view class="tui-flex tui-align-between y-line-height-200 ">
            <view class="avatar tui-col-2 tui-flex tui-vertical-center y-padding-r">
                <van-image round width="120rpx" height="120rpx" fit="fill" src="{{imgs[0]}}" bindtap="test"/>
            </view>
            <view class="tui-col-10 tui-flex ">
                <view class="  tui-col-10 ">
                    <view class="">{{user.name}}</view>
                    <view class=" tui-flex ">
                        <view class="y-padding-r">
                            <view class="">{{user.vip_level}}级会员</view>
                            <view class="">账户余额 ￥1788</view>

                        </view>

                        <view>
                            <view class="">积分 {{user.credits}}</view>
                            <view class="">优惠券 3张</view>

                        </view>
                    </view>
                </view>
                <view class="right-box tui-col-2 tui-flex-col tui-align-between">
                    <view class="">
                        <van-icon name="qr" bindtap="go" data-url="/pages/my/qrcode/index" size="32px"/>
                    </view>
                    <view class="detail tui-flex tui-align-right tui-center tui-vertical-center" bindtap="go"
                          data-url="/pages/my/qrcode/index">
                        <view>详情</view>
                        <van-icon class="" name="arrow" size="15px"/>
                    </view>
                </view>
            </view>
        </view>
        <view class="y-padding-none y-line-height-200">
            <view wx:for="{{headerLines}}" wx:key="index" bindtap="onTapDetail" data-id="{{item.id}}">
                {{item.title}}
            </view>
        </view>

    </card>
