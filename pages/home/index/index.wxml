                        <view class="tui-flex tui-align-center y-font-blod y-font-xxl y-padding-tb y-color-red"
                              style="white-space: pre-wrap">
                            {{item.title}}
                        </view>
                        <view class="y-underline tui-right ">
                            详情
                        </view>
                    </view>
                </view>
            </card>
        </view>

        <view class="position-rel" id="wear-container">
