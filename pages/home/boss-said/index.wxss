/*溢出只显示2行*/
.ellipsis {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}

/*标题背景：渐变阴影*/
.title-bg {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    background-image: linear-gradient(rgba(255, 255, 255, 0), rgba(0, 0, 0, 0.3));
}
