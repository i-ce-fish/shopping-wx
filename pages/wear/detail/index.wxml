<view class="container">
    <shop-title/>
    <carousel imgs="{{carousels}}"></carousel>

    <card custom-class="y-padding-none">
        <van-collapse value="{{activeColl}}" bindchange="setDetail" data-prop="activeColl">
            <van-collapse-item title="{{wear.title}}" name="1">
                <view class="y-color-black" wx:for="{{wear.content}}" wx:key="index">{{item}}</view>
            </van-collapse-item>
        </van-collapse>
    </card>

    <card wx:for="{{products}}" wx:key="index">
        <view class="tui-flex " bindtap="go" data-url="/pages/catagory/product-detail/index?id={{item.id}}">
            <view class="tui-col-6">
                <van-image src="{{item.img}}" width="100%" height="100%" fit="widthFix"></van-image>
            </view>
            <view class="tui-col-6 y-padding-l y-line-height-180 tui-flex-col tui-align-between">
             <view>
                 <view>
                     {{item.title}}
                 </view>
                 <view>
                     {{item.intro}}
                 </view>
                 <view class="y-color-red y-font-blod y-font-xl">
                     ￥{{item.price}}
                 </view>
             </view>
                <view class="tui-flex tui-align-right y-underline ">详情</view>
            </view>
        </view>
    </card>
    <float-button text="分享" icon="share" open-type="share"></float-button>
    <view class="y-padding-t"></view>
</view>
