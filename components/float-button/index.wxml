<view class="scroll-top"
      style="height:{{height}};width:{{width}};bottom:{{bottom}}rpx;right:{{right}}rpx"
>
    <view class="button-box">
        <button size="mini" open-type="{{openType}}" hover-class="none" class="text-btn">
            <view>
                <van-icon wx:if="{{icon}}" name="{{icon}}" size="30rpx" color="#999999"/>
            </view>
            <view style="text-align: center;font-size: {{size}}">{{text}}</view>
        </button>
    </view>
</view>
