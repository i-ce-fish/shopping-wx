<!--非列表布局时，增加纵向flex、space-between布局，一遍文本溢出换行时是向下挤，而不是向上-->
<view class=" {{listView?'y-flex':'y-flex-col y-align-between'}}"
      bindtap="go" data-url="/pages/catagory/product-detail/index"
      data-id="{{product.id}}">
    <view class=" y-padding-b">
        <van-image src="{{product.img}}" width="375rpx" height="375rpx" fit="fill" class=""/>

    </view>

    <view class="y-box  y-padding-lr y-padding-b  y-line-height-180 {{listView?'y-flex-col':''}}">
        <view>
            <van-image style="padding-right: 10rpx"
                       wx:for="{{product.colors}}" wx:key="index"
                       src="{{item.url}}"
                       width="40rpx" height="40rpx" fit="fill"
                       lazy-load/>
        </view>
        <view class="y-flex y-align-between y-font-s">
            <view>
                {{product.category}}
            </view>
            <view>
                {{product.min_size}}-{{product.max_size}}
            </view>
        </view>
        <view class="y-font-l ">
            {{product.name}}{{product.code}}
        </view>
        <view class="y-font-xxl y-font-blod y-color-red">
            ￥{{product.price}}
        </view>
    </view>
</view>
